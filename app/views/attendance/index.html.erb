<h1>勤怠管理</h1>
<h3>ようこそ<%= @user.username%>さん！</h3>

<%if is_working(@user) then%>
  <%if is_break(@user) then%>
    <%= button_to "休憩終了",attendance_break_out_time_path(id:current_user.id), {method: :post} %>
  <%else%>
    <%= button_to "退勤",attendance_out_time_path(id:current_user.id), {method: :post} %>
    <%= button_to "休憩開始",attendance_break_in_time_path(id:current_user.id), {method: :post} %>
  <%end%>
<%else%>
  <%= button_to "出勤",attendance_in_time_path(id:current_user.id), {method: :post} %>
  <%= button_to "リモート出勤",attendance_remote_in_time_path(id:current_user.id), {method: :post} %>
<%end%>



<%=link_to "ホームへ",home_index_path%>
